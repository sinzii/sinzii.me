extends ../layouts/main

block prepend head
    - var sharingImage = rootUrl('/images/avatar_scarlet.png');

block append head
    meta(property='og:description' content=siteDescription)
    meta(property='og:url' content=rootUrl('/'))
    meta(property='description' content=siteDescription)

block content
    +header
    +personal-board
    h3 Latest writings
    ul.listing
        - var latestPosts = posts.slice(0, 5)
        each post in latestPosts
            li.listing__item
                span.meta-color=`${formatDate(post.publishedAt)} - `
                a(href=postUrl(post))=post.title

    h3 Side Projects
    ul.listing
        each project in me.sideProjects
            li.listing__item
                a(href=project.url target='_blank') !{project.name}


